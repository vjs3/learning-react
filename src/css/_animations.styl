.order-enter
  background: red
  transform: translateX(-120%)
  transition: 0.5s
  max-height: 0
  padding: 0 !important
  &.order-enter-active
    background: yellow
    max-height: 60px
    transform: translateX(0)
    padding: 2rem 0 !important

.order-exit
  background: thistle 
  transition: 0.5s;
  &.order-exit-active
    transform: translateX(120%)
    padding: 0

.count-enter
  background: red
  transition: 5s
  transform: translateY(100%)
  &.count-enter-active
    background: yellow
    transform: translateY(0)

.count-exit
  background: black
  transform: translateY(0)
  transition: 5s
  position: absolute
  left 0
  bottom 0
  &.count-exit-active
    background: green
    transform: translateY(-100%)
    
    
